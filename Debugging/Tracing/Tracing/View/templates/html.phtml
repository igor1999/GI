<style>
    #gi-debugging > div.tracing-container div.argument-contents {padding: 5px 0 5px 5px;}
</style>
<script>
    function openOption(e)
    {
        let ul = e.target.parentNode.parentNode.querySelector('ul.option-detail');

        ul.style.display = (ul.style.display === 'none') ? 'block' : 'none';
    }

    function openArguments(e)
    {
        let ul = e.target.parentNode.parentNode.querySelector('ul.arguments-list');

        ul.style.display = (ul.style.display === 'none') ? 'block' : 'none';
    }

    function openArgument(e)
    {
        let div = e.target.parentNode.parentNode.querySelector('div.argument-contents');

        div.style.display = (div.style.display === 'none') ? 'block' : 'none';
    }

    function load()
    {
        let optionTitles = document.querySelectorAll('#gi-debugging > div.tracing-container div.option-title a');
        for (let i = 0; i <= optionTitles.length - 1; i ++) {
            optionTitles[i].addEventListener('click', openOption);
        }

        let argumentsTitles = document.querySelectorAll('#gi-debugging > div.tracing-container div.arguments-title a');
        for (let i = 0; i <= argumentsTitles.length - 1; i ++) {
            argumentsTitles[i].addEventListener('click', openArguments);
        }

        let argumentTitles = document.querySelectorAll('#gi-debugging > div.tracing-container div.argument-title a');
        for (let i = 0; i <= argumentTitles.length - 1; i ++) {
            argumentTitles[i].addEventListener('click', openArgument);
        }
    }

    window.addEventListener('load', load);
</script>
